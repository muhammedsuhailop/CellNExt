<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <title>CellNext | Signup</title>
  <link rel="stylesheet" href="css/user-signup-styles.css" type="text/css">
  <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/295/295128.png" type="image/x-icon">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>

<body>
  <div class="container">
    <div class="container-wrapper">
      <h3 class="login-text"><i class="bi bi-person-circle ac-logo"></i>Signup</h3>

      <form method="post" action="/signup">
        <!-- Full Name -->
        <div class="item">
          <label for="fullName">Full Name</label>
          <input class="input" type="text" id="name" placeholder="Enter your full name" name="name">
        </div>

        <!-- Email -->
        <div class="item">
          <label for="email">Email</label>
          <input class="input" type="email" id="email" placeholder="Enter your email address" name="email">
        </div>

        <!-- Phone -->
        <div class="item">
          <label for="phone">Phone</label>
          <input class="input" type="tel" id="phone" placeholder="Enter your phone number" name="phone">
        </div>

        <!-- Password -->
        <div class="item">
          <label for="password">Password</label>
          <input class="input" type="password" id="password" placeholder="Enter your password" name="password">
        </div>

        <!-- Confirm Password -->
        <div class="item">
          <label for="confirmPassword">Confirm Password</label>
          <input class="input" type="password" id="confirmPassword" placeholder="Re-enter your password" name="confirm-password">
        </div>
        <div class="item">
          <span id="confirmPasswordError" style="color: red; display: none;">Passwords do not match</span>
        </div>

        <!-- Send OTP Button -->
        <div class="item submit">
          <button type="button" id="sendOtp">Send OTP</button>
        </div>

        <!-- OTP Section -->
        <div class="item-otp" id="otpSection" style="display: none;">
          <label for="otp">OTP</label>
          <input class="input-otp" type="text" id="otp" placeholder="Enter OTP" maxlength="4" name="otp" required>
          <div id="otpTimer" class="timer" style="display: none;">
            You can request a new OTP in <span id="timer">30</span> seconds
          </div>
        </div>

        <!-- Submit Button -->
        <div class="item submit" id="submitSection" style="display: none;">
          <button type="submit" id="submitBtn">Submit</button>
        </div>
      </form>

      <h2><span>OR</span></h2>

      <!-- Google Signup -->
      <div class="item submit">
        <button type="button" class="google-btn">
          <div class="icons8-google social-mediaImg"></div>
          Signup with Google
        </button>
      </div>

      <!-- Link to Login Page -->
      <div class="item submit">
        <span class="ac">Already have an Account? <a href="/login">Login</a></span>
      </div>
    </div>
  </div>

  <script src="js/signup.js"></script>
</body>

</html>
